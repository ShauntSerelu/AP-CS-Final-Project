<project>
    <target name="clean">
        <delete dir="bin"/>
    </target>

    <target name="compile">
        <mkdir dir="bin/classes"/>
        <javac srcdir="src" destdir="bin/classes"/>
    </target>

    <target name="jar">
        <mkdir dir="bin/jar"/>
        <jar destfile="bin/jar/Game.jar" basedir="bin/classes">
            <manifest>
                <attribute name="Main-Class" value="Engine"/>
            </manifest>
        </jar>
    </target>

    <target name="run">
        <java jar="bin/jar/Game.jar" fork="true"/>
    </target>

</project>
